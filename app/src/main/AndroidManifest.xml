<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tacademy.sadajo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SadajoContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Sadajo">
        <activity android:name=".home.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".splash.SplashActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".search.searchlist.SearchListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" /> <!-- 에딧텍스트에서 키보드 올라오면 탭바는 같이 올라오지 않도록 SoftInputMode 적용함. style.xml에서도 가능함. -->
        <activity android:name=".shoppinglist.ShoppingListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".chatting.ChattingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".mypage.MyPageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".search.searchdetail.SearchDetail"
            android:screenOrientation="portrait"/>
        <activity android:name=".chatting.ChattingDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".mypage.MypageBuyActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".shoppinglist.LikeListDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".mypage.MyPageOtherActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BaseActivity"
            android:screenOrientation="portrait"/>
        <meta-data android:name="com.tacademy.sadajo.SadajoGlideModule"
            android:value="GlideModule"/>

    </application>
</manifest>