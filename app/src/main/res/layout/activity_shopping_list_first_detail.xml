<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shopping_list_first_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tacademy.sadajo.shoppinglist.LikeListDetailActivity">

    <include layout="@layout/include_toolbar_layout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameToolbarHome">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackFont"
                android:textSize="13sp"
                android:textStyle="normal"
                android:text="총" />
            <TextView

                android:id="@+id/goodsCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pink"
                android:textSize="13sp"
                android:textStyle="normal"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                 />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackFont"
                android:textSize="13sp"
                android:textStyle="normal"
                android:text="개" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shoppinListFirstDetailRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>
