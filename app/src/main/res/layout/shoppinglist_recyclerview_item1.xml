<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/sl_image"
        android:alpha="0.8"
        >
         <com.tacademy.sadajo.fonts.GothamTextView
            android:id="@+id/countryNameTextView"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="ITALY"
             android:textColor="@color/blackFont"
            />
        <com.tacademy.sadajo.fonts.NanumBoldTextView
            android:id="@+id/cityNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="이탈리아, 피렌체"
            android:textSize="13sp"
            android:textColor="@color/blackFont"/>
        <com.tacademy.sadajo.fonts.NanumRegularTextView
            android:id="@+id/dateTextView"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="@color/grayFont"
            android:text="2016.11.10 ~ 2016.11.20"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="wrap_content"
               android:layout_height="wrap_content"
              android:src="@drawable/sample_img"
               android:scaleType="fitXY" />

            <com.tacademy.sadajo.fonts.GothamTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/productImageView"
                android:layout_alignLeft="@id/productImageView"
                android:layout_alignRight="@id/productImageView"
                android:layout_alignTop="@id/productImageView"
                android:gravity="center"
                android:text="99+"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/sl_image_black"
                android:alpha="0.5"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>