<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="21dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/character_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="8dp"
                android:text="다른쇼퍼맨의 쇼핑리스트 구경하기"
                android:textColor="@color/blackFont"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:gravity="right"
                android:orientation="horizontal"

                >

                <ImageView
                    android:id="@+id/cardView3countryFlagImageView"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="3dp"
                    android:scaleType="center"
                    android:src="@drawable/flag"

                    />

                <com.tacademy.sadajo.fonts.NanumRegularTextView

                    android:id="@+id/cardView3CountryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="이탈리아"
                    android:textColor="@color/grayFont"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whiteGrayFont" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/anoter_shoplist_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="4dp"
                android:layout_marginLeft="18dp">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>