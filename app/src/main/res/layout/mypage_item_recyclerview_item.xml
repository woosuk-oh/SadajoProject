<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:id="@+id/itemProductImageView"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:src="@drawable/detail_item_img_sample"
     android:scaleType="fitXY"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"

       >
    <com.tacademy.sadajo.fonts.NanumBoldTextView
        android:id="@+id/itemProductNameTextView"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="산타마리아노벨라 향수"
        android:textColor="@color/blackFont"
        />



        <LinearLayout
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <ImageView
                android:id="@+id/itemFlagImageView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src ="@drawable/flag"
                android:layout_marginRight="3dp"/>
            <com.tacademy.sadajo.fonts.NanumRegularTextView

                android:id="@+id/itemCountryNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이탈리아"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>