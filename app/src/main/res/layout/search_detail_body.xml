<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteGrayFont"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/blue"
            app:expandedTitleMarginBottom="11dp"
            app:expandedTitleMarginStart="33dp"
            app:expandedTitleTextAppearance="@style/TextAppearanceSet"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            <!--<ImageView-->
            <!--android:id="@+id/item_image"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:fitsSystemWindows="true"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:transitionName="@string/transitionName"-->
            <!--/>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <android.support.v4.view.ViewPager
                    android:id="@+id/search_detail_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v4.view.ViewPager>

                <TextView
                    android:id="@+id/itemcount"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/search_back_icon2" />

            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/item_expand_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="53dp"

            android:background="@color/white"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="19dp">

                <TextView
                    android:id="@+id/search_detail_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"


                    android:text="itemName"
                    android:textColor="#232323"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingTop="19dp">


                <ImageView
                    android:id="@+id/cuntry_detail_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/search_detail_country_name"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="16dp"
                    android:text="이탈리아"
                    android:textColor="#747474"
                    android:textSize="13sp" />

            </LinearLayout>


        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_above="@+id/list_detail_hash_button"
            android:layout_below="@+id/list_detail_hash_button"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scrollbars="none"

            >

            <LinearLayout
                android:id="@+id/list_detail_hash_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingTop="7dp">


                <Button
                    android:id="@+id/sample_hash_button1"
                    android:layout_width="wrap_content"

                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/search_list_tag"

                    android:text="hash1"
                    android:textColor="#232323"
                    android:textSize="13sp"

                    />

                <Button
                    android:id="@+id/sample_hash_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/search_list_tag"


                    android:text="hash2"
                    android:textColor="#232323"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/sample_hash_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/search_list_tag"

                    android:text="hash3"
                    android:textColor="#232323"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/sample_hash_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/search_list_tag"

                    android:text="hash4"
                    android:textColor="#232323"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/sample_hash_button5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/search_list_tag"

                    android:text="hash5"
                    android:textColor="#232323"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/sample_hash_button6"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/search_list_tag"

                    android:text="hash6"
                    android:textColor="#232323"
                    android:textSize="13sp" />


            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="1dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/search_profile_105" />

            <TextView
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="20dp"
                android:text="텍스트텍스트텍스트텍스트" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="25dp"
                android:text="쇼퍼맨에게 부탁해볼까요?"
                android:textColor="@color/blackFont"
                android:textSize="17sp" />

        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"

            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/search_detail_item_circleimageuser_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    >


                    <ImageView
                        android:id="@+id/detail_circleimageuser1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/search_profile_180" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="9dp"
                        android:text="아롱이다롱" />
                </LinearLayout>



            </RelativeLayout>
        </HorizontalScrollView>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>