<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="268dp"
    android:layout_height="248dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="@drawable/my_re_pop">
    <LinearLayout
        android:layout_marginTop="74dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/reviewDialogUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/blackFont"
        android:text="닉네임 "/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/blackFont"
        android:text="님과의 거래는 어땠나요?"/>
    </LinearLayout>
    <EditText
        android:id="@+id/reviewDialogEditText"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:textSize="13sp"
        android:textStyle="normal"
        android:gravity="top|left"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/reviewDialogButton"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:background="@drawable/selector_review_dialog_button"/>
         <ImageButton
             android:id="@+id/reviewDialogCancelButton"
             android:layout_marginLeft="12dp"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:background="@drawable/selector_review_dialog_button_cancel"/>

        
    </LinearLayout>
</LinearLayout>