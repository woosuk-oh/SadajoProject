<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mypage_buy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tacademy.sadajo.mypage.MypageBuyActivity">


    <include layout="@layout/include_toolbar_layout" />


    <android.support.design.widget.TabLayout
        android:id="@+id/mypageDealTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frameToolbarHome"
        app:tabBackground="@drawable/selector_tab"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/TabLayout" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mypageDealViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mypageDealTab"
        android:layout_above="@id/frameBottomBar" />


</RelativeLayout>
