<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mypage_buy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tacademy.sadajo.mypage.MypageBuyActivity">

    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="?actionBarSize"
        android:background="@color/sadajoBackground"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" >


    </android.support.v7.widget.Toolbar>

    <!--   <include layout="@layout/include_toolbar_layout"
            android:id="@+id/shoppinglisttoolbar"/>-->


    <android.support.design.widget.TabLayout
        android:id="@+id/mypage_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        app:tabBackground="@drawable/selector_tab"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/TabLayout"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/mypage_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mypage_tab"
        android:layout_above="@id/frameBottomBar"/>



</RelativeLayout>
