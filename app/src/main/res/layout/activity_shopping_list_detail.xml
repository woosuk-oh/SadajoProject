<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shopping_list_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tacademy.sadajo.shoppinglist.ShoppingListDetailActivity">

    <include layout="@layout/include_toolbar_layout" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameToolbarHome">


        <LinearLayout
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackFont"
                android:textSize="13sp"
                android:textStyle="normal"
                android:text="총"
                />

            <TextView
                android:id="@+id/shopGoodsCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pink"
                android:textSize="13sp"
                android:textStyle="normal"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackFont"
                android:textSize="13sp"
                android:textStyle="normal"

                android:text="개"
                />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shoppingListDetailRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>
