<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/requestConfirmCountryNameTextView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sadajoBackground"
        android:gravity="center"
        android:hint="빅토리아시크릿"
        android:textColorHint="@color/whiteGrayFont"
        android:textSize="13sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/requestConfirmProductNameTextView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sadajoBackground"
        android:gravity="center"
        android:hint="빅토리아시크릿"
        android:textColorHint="@color/whiteGrayFont"
        android:textSize="13sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/requestConfirmProductPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sadajoBackground"
        android:gravity="center"
        android:hint="100,000"
        android:textColorHint="@color/whiteGrayFont"
        android:textSize="13sp"

        android:textStyle="normal" />

    <TextView
        android:id="@+id/requestConfirmProductOptTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sadajoBackground"
        android:gravity="center"
        android:hint="추가요청사항"
        android:scrollbars="vertical"
        android:textColorHint="@color/whiteGrayFont"
        android:textSize="13sp"
        android:textStyle="normal" />


    <ImageButton
        android:id="@+id/requestConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_request_confirm_dialog_button" />


    <ImageButton
        android:id="@+id/requestConfirmCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_request_dialog_cancel_button" />

</LinearLayout>