<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_image"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="com.tacademy.sadajo.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="10dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/kakaoLoginImageButton"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_kakao" />

        <ImageButton
            android:id="@+id/faceBookLoginImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/login_button_facebook" />
    </LinearLayout>


</LinearLayout>
