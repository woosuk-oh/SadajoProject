<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="264dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/buyProductImageView"
        android:layout_marginTop="30dp"
        android:layout_width="204dp"
        android:layout_height="204dp"
        android:layout_gravity="center"
        android:src="@drawable/profile_empty" />

    <TextView
        android:id="@+id/buyCountryEngName"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="PHILIPPINES"
        android:textSize="30sp"
        android:textColor="@color/blackFont"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/buyCountryKorName"
        android:layout_marginTop="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필리핀, 마닐라"
        android:textSize="11sp"
        android:textColor="@color/grayFont"
        android:layout_gravity="center"
        android:textStyle="normal"/>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/buyProfileImageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/profile_empty" />

            <TextView
                android:id="@+id/buyUserNameTextView"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/buyProductTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품명"
                android:textSize="11sp"
                android:textColor="@color/grayFont"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/buyProductNameTextView"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="산타마리아노벨라 향수 최대여기까"
                android:textColor="@color/blackFont"
                android:textSize="13sp"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="128dp"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/buyDateTextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거래날짜"
            android:textSize="10sp"
            android:textColor="@color/grayFont"
            android:textStyle="normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <TextView
                android:id="@+id/buyDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016.11.20"
                android:textSize="11sp"
                android:textColor="@color/grayFont"
                android:textStyle="normal"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:id="@+id/buyRequestTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="사다조 요청중"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:background="@color/sadajoBackground" />


        <ImageButton
            android:id="@+id/buyReviewButton"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_my_buylist_review" />

        <ImageButton
            android:id="@+id/buyRequestButton"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:background="@drawable/my_offer" />
    </LinearLayout>
</LinearLayout>