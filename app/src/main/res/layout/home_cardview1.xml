<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:layout_marginTop="42dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/countryNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="KOREA"
                android:layout_marginLeft="24dp"
                 android:textColor="#232323"
                android:textStyle="italic"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="17dp"

                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="18dp">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:text="떠나요"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:textColor="#232323"
                        android:textStyle="normal"/>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="90dp"
                        android:layout_height="1dp"
                        android:background="@color/sadajoBackground" />

                    <TextView
                        android:id="@+id/departDateTextView"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="2016.11.16"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#232323"
                        android:textStyle="bold"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/airport" />

                <LinearLayout
                    android:layout_marginLeft="18dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="돌아와요"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:textColor="#232323"
                        android:textStyle="normal"/>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="90dp"
                        android:layout_height="1dp"
                        android:background="@color/sadajoBackground" />

                    <TextView
                        android:id="@+id/comeDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016.11.16"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#232323"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <LinearLayout
                android:id="@+id/register"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <ImageView
                    android:layout_marginLeft="24dp"
                    android:padding="0dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/mark"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center" />

                <TextView
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행일정을 등록해보세요."
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:textColor="#232323"
                    android:textStyle="normal"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"


                    >

                    <Button
                        android:id="@+id/scheduleRegisterButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="일정등록"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="#747474"
                        android:background="@drawable/selector_button_bg"
                        android:textStyle="normal"
                        style="?android:attr/borderlessButtonStyle"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>