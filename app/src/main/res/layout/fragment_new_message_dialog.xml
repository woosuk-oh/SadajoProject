<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="268dp"
    android:layout_height="118dp"
    android:background="@drawable/home_push"
    android:paddingBottom="20dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
    <ImageButton
        android:id="@+id/messageCheckButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_message_dialog"
        android:layout_gravity="bottom"
        android:layout_marginRight="12dp"/>
   <ImageButton
       android:id="@+id/messageCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_message_cancel_dialog"
        android:layout_gravity="bottom"/>

        <!--<TextView-->
            <!--android:id="@+id/pushTextView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:gravity="center"/>-->
    </LinearLayout>
</LinearLayout>
