<resources>

   <!-- Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!- Customize your theme here.
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>-->


    <!-- Theme추가  NoACtionBar-->
    <style name="Theme.DesignDemo" parent="Theme.Sadajo">
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Sadajo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#2fbcea</item>
        <item name="colorPrimaryDark">#2fbcea</item>
        <item name="colorAccent">#2fbcea</item>
        <item name="android:windowBackground">@color/window_background</item>
       <item name="android:windowAnimationStyle">@null</item>  <!-- 액티비티 애니메이션 전환 효과 삭제-->
        <!-- enable window content transitions -->


    </style>


    <!--TabLayout tabBackground textColor 수정 -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/sadajoBackground</item>
        <item name="tabBackground">@drawable/selector_tab</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/whiteGrayFont</item>
        <item name="tabPaddingStart">3dp</item>
        <item name="tabPaddingEnd">3dp</item>
        <item name="colorAccent">@color/sadajoBackground</item>
        <item name="tabSelectedTextColor">@color/blackFont</item>
        <item name="tabTextColor">@color/grayFont</item>
        <item name="android:textAppearance">@style/CustomTabWidgetText</item>
    </style>
    <style name="CustomTabWidgetText"
        parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">center</item>
      <!--  <item name="android:textStyle">bold</item>-->
    </style>

    <style name="TextAppearanceSet" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
    </style>



    //DatePickerAlert
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/pink</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/grayFont</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <!--buttons color-->
        <item name="colorAccent">@color/sadajoBackground</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/grayFont</item>
        <!--dialog background-->
        <item name="android:windowIsTranslucent">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
